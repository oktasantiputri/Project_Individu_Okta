<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".StartPageFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_to_instruktur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Instruktur"
            android:textColor="#000000"
            app:icon="@drawable/ic_trainer"
            app:iconGravity="top"
            app:iconPadding="15dp" />

        <Button
            android:id="@+id/btn_to_peserta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="peserta"
            android:textColor="#000000"
            app:icon="@drawable/ic_peserta"
            app:iconGravity="textTop"
            app:iconPadding="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_to_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Kelas"
            android:textColor="#000000"
            app:icon="@drawable/ic_class"
            app:iconGravity="top"
            app:iconPadding="15dp" />

        <Button
            android:id="@+id/btn_to_materi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materi"
            android:textColor="#000000"
            app:icon="@drawable/ic_theory"
            app:iconGravity="top"
            app:iconPadding="15dp" />
    </LinearLayout>

</LinearLayout>